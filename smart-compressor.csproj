<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>smart_compressor</RootNamespace>
    <OutputType>WinExe</OutputType>
    
    <!-- Build optimization -->
    <UseAppHost>true</UseAppHost>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    
    <!-- Runtime target -->
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <PublishTrimmed>false</PublishTrimmed>
    <TieredCompilation>true</TieredCompilation>
    <TieredCompilationQuickJit>true</TieredCompilationQuickJit>
    
    <!-- Embedded files manifest only needed in Release when embedding -->
    <GenerateEmbeddedFilesManifest>false</GenerateEmbeddedFilesManifest>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="9.0.10" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="9.0.0" />
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.2792.45" />
  </ItemGroup>
  
  <ItemGroup>
    <FrameworkReference Include="Microsoft.WindowsDesktop.App.WindowsForms" />
  </ItemGroup>

  <!-- Release: embed static content and FFmpeg into the assembly -->
  <ItemGroup Condition="'$(Configuration)'=='Release'">
    <EmbeddedResource Include="wwwroot\**\*" />
    <EmbeddedResource Include="ffmpeg\ffmpeg.exe" />
  </ItemGroup>

  <!-- Debug: copy FFmpeg locally for instant startup -->
  <ItemGroup Condition="'$(Configuration)'=='Debug'">
    <Content Include="ffmpeg\ffmpeg.exe" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <!-- Build frontend only when source files change -->
  <Target Name="BuildFrontend" BeforeTargets="BeforeBuild" Inputs="frontend/src/**/*;frontend/index.html;frontend/package.json" Outputs="wwwroot/index.html">
    <Exec Command="cd frontend &amp;&amp; npm install" Condition="!Exists('frontend/node_modules')" />
    <Message Importance="high" Text="Building frontend..." />
    <Exec Command="cd frontend &amp;&amp; npm run build" />
  </Target>
  
  <!-- Skip frontend build if wwwroot is up to date -->
  <Target Name="CheckFrontendUpToDate" BeforeTargets="BuildFrontend">
    <Message Importance="high" Text="Checking if frontend build is needed..." Condition="Exists('wwwroot/index.html')" />
  </Target>

  <!-- Speed-focused Debug settings -->
  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <PublishSingleFile>false</PublishSingleFile>
    <SelfContained>false</SelfContained>
    <PublishReadyToRun>false</PublishReadyToRun>
    <EnableCompressionInSingleFile>false</EnableCompressionInSingleFile>
    <IncludeNativeLibrariesForSelfExtract>false</IncludeNativeLibrariesForSelfExtract>
    <GenerateEmbeddedFilesManifest>false</GenerateEmbeddedFilesManifest>
  </PropertyGroup>

  <!-- Release tuning: keep single-file, avoid compression and content extraction -->
  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <EnableCompressionInSingleFile>false</EnableCompressionInSingleFile>
    <IncludeAllContentForSelfExtract>false</IncludeAllContentForSelfExtract>
    <PublishReadyToRun>true</PublishReadyToRun>
    <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
  </PropertyGroup>

</Project>
